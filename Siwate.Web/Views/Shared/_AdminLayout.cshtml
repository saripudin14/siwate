<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin SIWATE</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        brand: { 50: '#f0f9ff', 600: '#0284c7', 900: '#0c4a6e' }
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-slate-100 h-screen overflow-hidden flex">

    <!-- Sidebar -->
    <aside class="w-64 bg-slate-900 text-white flex flex-col shadow-xl">
        <div class="h-16 flex items-center px-6 border-b border-slate-700">
            <span class="text-xl font-bold tracking-wider">SIWATE ADMIN</span>
        </div>
        <nav class="flex-1 px-4 py-6 space-y-2">
            <a asp-controller="Admin" asp-action="Index" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors">
                <span>Dashboard</span>
            </a>
            <a asp-controller="Admin" asp-action="Questions" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors">
                <span>Kelola Pertanyaan</span>
            </a>
            <a asp-controller="Admin" asp-action="Datasets" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:bg-slate-800 hover:text-white transition-colors">
                <span>Dataset & Training</span>
            </a>
            <hr class="border-slate-700 my-4">
            <a asp-controller="Home" asp-action="Index" class="flex items-center gap-3 px-4 py-3 rounded-lg text-slate-400 hover:text-white">
                <span>Ke Halaman Utama</span>
            </a>
            <a asp-controller="Account" asp-action="Logout" class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-900/20 transition-colors">
                <span>Keluar</span>
            </a>
        </nav>
    </aside>

    <!-- Content -->
    <div class="flex-1 flex flex-col h-screen overflow-hidden">
        <header class="h-16 bg-white border-b border-slate-200 flex items-center justify-between px-8 shadow-sm">
            <h1 class="text-xl font-bold text-slate-800">@ViewData["Title"]</h1>
            <div class="text-sm text-slate-500">Administrator Logged In</div>
        </header>

        <main class="flex-1 overflow-auto p-8">
            @if (TempData["Message"] != null)
            {
                <div class="mb-6 bg-blue-50 border-l-4 border-blue-500 p-4 text-blue-700 shadow-sm rounded-r">
                    <p class="font-medium">Info</p>
                    <p>@TempData["Message"]</p>
                </div>
            }
            @RenderBody()
        </main>
    </div>

</body>
</html>
