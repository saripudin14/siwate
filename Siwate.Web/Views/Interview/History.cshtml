@model IEnumerable<Siwate.Web.Models.InterviewResult>

@{
    ViewData["Title"] = "Riwayat Simulasi";
}

<div class="max-w-5xl mx-auto py-8">
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Riwayat Simulasi</h1>
            <p class="text-slate-500">Daftar latihan wawancara yang telah Anda selesaikan</p>
        </div>
        <a asp-action="Start" class="bg-brand-600 hover:bg-brand-700 text-white font-medium px-4 py-2 rounded-lg shadow-sm transition-colors flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
            Simulasi Baru
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="mb-6 bg-green-100 border border-green-200 text-green-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline">@TempData["Message"]</span>
        </div>
    }

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        @if (!Model.Any())
        {
            <div class="text-center py-16">
                <div class="mx-auto h-24 w-24 text-slate-200 mb-4">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                </div>
                <h3 class="text-lg font-medium text-slate-900">Belum ada riwayat</h3>
                <p class="mt-1 text-slate-500">Anda belum melakukan simulasi wawancara apapun.</p>
                <div class="mt-6">
                    <a asp-action="Start" class="text-brand-600 hover:text-brand-700 font-medium hover:underline">Mulai simulasi pertama Anda &rarr;</a>
                </div>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Tanggal</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Pertanyaan</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-bold text-slate-500 uppercase tracking-wider">Skor</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">Feedback Singkat</th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-bold text-slate-500 uppercase tracking-wider">Aksi</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-slate-200 hover:bg-slate-50 transition-colors">
                        @foreach (var item in Model)
                        {
                            string badgeColor = item.Score >= 80 ? "bg-emerald-100 text-emerald-800" : (item.Score >= 60 ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800");
                            
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                    @item.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm font-medium text-slate-900 line-clamp-1 max-w-md" title="@item.Answer.Question.QuestionText">
                                        @item.Answer.Question.QuestionText
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @badgeColor">
                                        @item.Score / 100
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-slate-600 line-clamp-1 max-w-xs" title="@item.Feedback">
                                        @item.Feedback
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-3">
                                        <a asp-action="Result" asp-route-id="@item.Id" class="text-brand-600 hover:text-brand-900 transition-colors" title="Lihat Detail">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Apakah Anda yakin ingin menghapus riwayat ini? Data tidak dapat dikembalikan.');" class="inline">
                                            <button type="submit" class="text-red-600 hover:text-red-900 transition-colors" title="Hapus">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
