@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "_AdminLayout";
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    
    <!-- Card Pertanyaan with gradient -->
    <div class="group relative bg-white p-6 rounded-2xl shadow-sm border border-slate-200 hover-lift overflow-hidden">
        <!-- Decorative gradient background -->
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-blue-500/10 to-cyan-500/10 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
        
        <div class="relative z-10">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <p class="text-sm font-medium text-slate-500 mb-1">Total Pertanyaan</p>
                    <h3 class="text-4xl font-bold bg-gradient-to-br from-blue-600 to-cyan-600 bg-clip-text text-transparent">
                        @ViewBag.QuestionCount
                    </h3>
                </div>
                <div class="p-4 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-2xl text-white shadow-lg shadow-blue-500/30 group-hover:scale-110 transition-transform">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
            
            <div class="flex items-center justify-between pt-3 border-t border-slate-100">
                <a asp-action="Questions" class="flex items-center gap-2 text-sm font-semibold text-blue-600 hover:text-blue-700 group/link">
                    <span>Kelola Pertanyaan</span>
                    <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
                <div class="flex items-center gap-1 text-xs text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>Active</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Card Total Pengguna with gradient -->
    <div class="group relative bg-white p-6 rounded-2xl shadow-sm border border-slate-200 hover-lift overflow-hidden">
        <!-- Decorative gradient background -->
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
        
        <div class="relative z-10">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <p class="text-sm font-medium text-slate-500 mb-1">Total Pengguna</p>
                    <h3 class="text-4xl font-bold bg-gradient-to-br from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        @ViewBag.UserCount
                    </h3>
                </div>
                <div class="p-4 bg-gradient-to-br from-purple-500 to-pink-500 rounded-2xl text-white shadow-lg shadow-purple-500/30 group-hover:scale-110 transition-transform">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
            </div>
            
            <div class="flex items-center justify-between pt-3 border-t border-slate-100">
                <span class="text-sm text-slate-500 flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full bg-purple-500 animate-pulse"></div>
                    Pengguna terdaftar
                </span>
                <div class="flex items-center gap-1 text-xs text-purple-600 bg-purple-50 px-2 py-1 rounded-full">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    <span>Users</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Card AI Status with gradient -->
    <div class="group relative bg-white p-6 rounded-2xl shadow-sm border border-slate-200 hover-lift overflow-hidden">
        <!-- Decorative gradient background -->
        <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-emerald-500/10 to-teal-500/10 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
        
        <div class="relative z-10">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <p class="text-sm font-medium text-slate-500 mb-1">Status AI Engine</p>
                    <h3 class="text-4xl font-bold bg-gradient-to-br from-emerald-600 to-teal-600 bg-clip-text text-transparent">
                        Ready
                    </h3>
                </div>
                <div class="p-4 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-2xl text-white shadow-lg shadow-emerald-500/30 group-hover:scale-110 transition-transform">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
            
            <div class="flex items-center justify-between pt-3 border-t border-slate-100">
                <span class="text-sm text-slate-500 flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
                    Google Gemini API
                </span>
                <div class="flex items-center gap-1 text-xs text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">
                    <span class="font-semibold">Online</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 mb-8">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-xl font-bold text-slate-800">Aksi Cepat</h2>
            <p class="text-sm text-slate-500 mt-1">Kelola sistem Anda dengan mudah</p>
        </div>
        <div class="p-3 bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
        </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a asp-action="Questions" class="group flex items-center gap-4 p-4 rounded-xl border-2 border-slate-100 hover:border-blue-200 hover:bg-blue-50/50 transition-all">
            <div class="p-3 bg-blue-100 text-blue-600 rounded-lg group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
            </div>
            <div class="flex-1">
                <p class="font-semibold text-slate-800 group-hover:text-blue-700">Tambah Pertanyaan</p>
                <p class="text-xs text-slate-500 mt-0.5">Buat pertanyaan wawancara baru</p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-600 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </a>
        
        <a asp-action="Questions" class="group flex items-center gap-4 p-4 rounded-xl border-2 border-slate-100 hover:border-cyan-200 hover:bg-cyan-50/50 transition-all">
            <div class="p-3 bg-cyan-100 text-cyan-600 rounded-lg group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
            </div>
            <div class="flex-1">
                <p class="font-semibold text-slate-800 group-hover:text-cyan-700">Kelola Bank Soal</p>
                <p class="text-xs text-slate-500 mt-0.5">Edit atau hapus pertanyaan wawancara</p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-cyan-600 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </a>
    </div>
</div>

<!-- System Info -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Activity -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
        <h3 class="text-lg font-bold text-slate-800 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Informasi Sistem
        </h3>
        <div class="space-y-3">
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
                <span class="text-sm text-slate-600">Framework</span>
                <span class="text-sm font-semibold text-slate-800">ASP.NET Core 9.0</span>
            </div>
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
                <span class="text-sm text-slate-600">AI Engine</span>
                <span class="text-sm font-semibold text-slate-800">Google Gemini API</span>
            </div>
            <div class="flex items-center justify-between py-2 border-b border-slate-100">
                <span class="text-sm text-slate-600">Model</span>
                <span class="text-sm font-semibold text-slate-800">gemini-3-flash-preview</span>
            </div>
            <div class="flex items-center justify-between py-2">
                <span class="text-sm text-slate-600">Database</span>
                <span class="text-sm font-semibold text-slate-800">PostgreSQL (Supabase)</span>
            </div>
        </div>
    </div>
    
    <!-- Tips -->
    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl shadow-lg p-6 text-white relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
        <div class="relative z-10">
            <div class="flex items-start gap-3 mb-3">
                <div class="p-2 bg-white/20 rounded-lg backdrop-blur-sm">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-bold text-lg mb-1">ðŸ¤– Tentang AI SIWATE</h3>
                    <p class="text-sm text-white/90">SIWATE menggunakan Google Gemini AI untuk menilai jawaban wawancara secara cerdas. AI akan menganalisis relevansi, struktur (metode STAR), dan kualitas bahasa untuk memberikan skor dan feedback yang akurat!</p>
                </div>
            </div>
        </div>
    </div>
</div>
