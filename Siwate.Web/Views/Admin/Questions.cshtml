@model IEnumerable<Siwate.Web.Models.Question>

@{
    ViewData["Title"] = "Kelola Pertanyaan";
    Layout = "_AdminLayout";
}

<div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
    <!-- Header Section -->
    <div class="p-6 border-b border-slate-200 bg-gradient-to-r from-blue-50 to-cyan-50">
        <div class="flex items-center gap-3 mb-2">
            <div class="p-2 bg-blue-600 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-slate-800">Bank Pertanyaan Wawancara</h2>
                <p class="text-sm text-slate-600 mt-0.5">Kelola pertanyaan yang akan digunakan dalam simulasi wawancara</p>
            </div>
        </div>
    </div>
    
    <!-- Add Form Section -->
    <div class="p-6 bg-gradient-to-br from-slate-50 to-blue-50/30 border-b border-slate-200">
        <form asp-action="AddQuestion" method="post" class="flex flex-col md:flex-row gap-4">
            <div class="flex-1 relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                    </svg>
                </div>
                <input type="text" name="questionText" required
                    class="w-full pl-12 pr-4 py-3 rounded-xl border-2 border-slate-200 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all text-slate-700 placeholder:text-slate-400"
                    placeholder="Tulis pertanyaan wawancara baru, contoh: Ceritakan tentang pengalaman kerja Anda...">
            </div>
            <button type="submit" class="px-8 py-3 bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white rounded-xl font-semibold shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transition-all flex items-center gap-2 group">
                <svg class="w-5 h-5 group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <span>Tambah Pertanyaan</span>
            </button>
        </form>
        <p class="text-xs text-slate-500 mt-3 flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Pertanyaan yang baik harus jelas, relevan, dan mendorong jawaban yang mendalam
        </p>
    </div>

    <!-- Table Section -->
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
                <tr class="bg-gradient-to-r from-slate-100 to-slate-50 text-slate-700 text-sm font-semibold tracking-wide">
                    <th class="px-6 py-4 text-left w-16">#</th>
                    <th class="px-6 py-4 text-left">Pertanyaan</th>
                    <th class="px-6 py-4 text-center w-32">Aksi</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @{int counter = 1;}
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-blue-50/30 transition-colors group">
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-700 text-sm font-semibold group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                @counter
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <p class="text-slate-700 font-medium leading-relaxed">@item.QuestionText</p>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <form asp-action="DeleteQuestion" method="post" onsubmit="return confirm('Hapus pertanyaan ini?');" class="inline-block">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 text-red-600 hover:text-white hover:bg-red-600 border-2 border-red-200 hover:border-red-600 rounded-lg font-medium transition-all group/btn" title="Hapus">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    <span class="hidden md:inline">Hapus</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="p-16 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-slate-100 mb-4">
                <svg class="w-10 h-10 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-700 mb-2">Belum Ada Pertanyaan</h3>
            <p class="text-slate-500">Mulai dengan menambahkan pertanyaan pertama Anda di form di atas</p>
        </div>
    }
    else
    {
        <div class="px-6 py-4 bg-slate-50 border-t border-slate-200 flex items-center justify-between">
            <p class="text-sm text-slate-600">
                Total <span class="font-semibold text-blue-600">@Model.Count()</span> pertanyaan tersimpan
            </p>
            <div class="flex items-center gap-2 text-xs text-emerald-600 bg-emerald-50 px-3 py-1.5 rounded-full">
                <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
                <span class="font-medium">Database Aktif</span>
            </div>
        </div>
    }
</div>

